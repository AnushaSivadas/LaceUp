<%- include('../partials/userHeader')%>
<link rel="stylesheet" href="/stylesheets/home.css" >

<section>
    <% if(product.length>0){%>
    <div class="container text-center ">
        <h4 class="py-4 text-dark"><strong><%-category.name%></strong></h4>
      <div class="row ">
        <% for(let p of product){%>
          <div class="col-md-3 col-sm-6  bg-light p-4">
              <div class="product-grid">
                  <div class="product-image">
                    <a href="/productDetails/<%- p._id%>" class="image">
                          <img class="pic-1" src="/uploads/<%-p.images[0].filename%>">
                          <img class="pic-2" src="/uploads/<%-p.images[1].filename%>">
                      </a>
                       <span class="product-sale-label">sale!</span>
                      <ul class="social">
                          <li><a href="/productDetails/<%- p._id%>" data-tip="Quick View"><i class="fa fa-eye"></i></a></li>
                        </ul> 
                        
                      <div class="product-rating">
                          <ul class="rating">
                              <li class="fas fa-star"></li>
                              <li class="fas fa-star"></li>
                              <li class="fas fa-star"></li>
                              <li class="far fa-star"></li>
                              <li class="far fa-star"></li>
                          </ul>
                          <!-- <a class="add-to-cart" href="/addtocart/<%-p._id%>"> ADD TO CART </a> -->
                      </div>
                  </div>
                  <div class="product-content">
                      <h3 class="title"><a href="/productDetails/<%- p._id%>"><%-p.name%></a></h3>
                      <div class="price"><span>&#8377;<%-p.actualprice%></span>&#8377;<%-p.sellingprice%></div>
                  </div>
              </div>
          </div>
          <%}%>
          </div>
  </div>
  <%}else{%>
    <h4 class="py-4 text-dark text-center"><strong><%-category.name%></strong></h4>
    <div class="d-flex justify-content-center align-items-center my-5" style="height:300px;">
        
        <h3 class="fw-bold text-danger" >This category has no products</h3>
    </div>
    <%}%>
</section>
<%- include('../partials/footer')%>