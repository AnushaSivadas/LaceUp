<%- include('../partials/userHeader')%>
<section style="background-image:url('./images/banner1.jpg');height:700px">
<div class="container">
  <div class="row ">
    <div class="col-md-6 offset-md-3 ">
      <!-- <h2 class="text-center text-dark fw-bold mt-4">Sign Up</h2> -->
      <div class="mt-3 text-center">
        <div class="mt-3 text-center">
          <%- include('../partials/flash')%>
          </div>
        </div>
      
      <div class="card my-3 mt-5 ">

        <form class="card-body cardbody-color p-lg" action="/enterphno" method="post" id="myForm" novalidate>
            <div class="text-center text-dark fw-bold fs-3 mt-4">OTP Login</div>
            <div class="text-center">
              <img src="./images/profileavatar.png" class="img-fluid  img-thumbnail rounded-circle my-3"
                width="100px" alt="profile">
            </div>

          <div class="form-floating mb-3">
            <input type="text" class="form-control" name="phno" id="phno" aria-describedby="emailHelp"
              placeholder="User Name">
              <label for="phno" class=" text-muted">Enter your mobile no</label>
             
          </div>
          
          <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-3 w-100">Send Code</button>
          
          </div>
          <div id="emailHelp" class="form-text text-center mb-2 text-dark">Remember your password? <a href="/userLogin" class="text-dark fw-bold">Login here</a>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>

</section>
   
  