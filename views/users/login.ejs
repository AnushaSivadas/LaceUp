<%- include('../partials/userHeader')%>
<section  style="background-image:url('./images/banner1.jpg');height:700px;padding-top: 60px;">
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <!-- <h2 class="text-center text-dark fw-bold mt-4">Login</h2> -->
      <div class="mt-3 text-center">
        <%- include('../partials/flash')%>
        </div>
            
      <div class="card my-3">

<form class="card-body cardbody-color p-lg" action="/userLogin" method="post">
  <div class="text-center text-dark fw-bold fs-3 mt-4">Login Here</div>
  <div class="text-center">
    <img src="./images/profileavatar.png" class="img-fluid  img-thumbnail rounded-circle my-3"
      width="100px" alt="profile">
  </div>
<input type="text" value="<%=guestCart%>" name="guestCart" hidden>
    
    <div class="form-floating mb-3">
      <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp"
        placeholder="Email Id">
        <label for="email" class="text-muted">Email Id</label>
    </div>
    <div class="form-floating mb-3">
      <input type="password" class="form-control" name="password" id="password" placeholder="Password">
      <label for="password" class=" text-muted">Password</label>            
    </div>
    <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-3 w-100">Login</button></div>
    <p class="text-center fw-bold">OR</p>
    <div class="text-center"><a href="/enterphno"><div class="btn btn-color px-5 mb-3 w-100">OTP Login</div></a></div>
    <div class="text-center">
      <a href="#" class="text-dark">Forget Password<br> </a>
    </div>
    <div id="emailHelp" class="form-text text-center mb-2 text-dark">Not Registered? <a href="/userRegister" class="text-dark fw-bold">Register here</a>
    </div>
    
  </form>
</div>

</div>
</div>
</div>
